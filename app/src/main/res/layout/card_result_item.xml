    android:background="?attr/selectableItemBackground" android:clickable="true" android:focusable="true"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:minHeight="48dp" android:minWidth="96dp" android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/card_time0">

    <FrameLayout android:id="@+id/card_time1"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_gravity="center" android:padding="@dimen/activity_margin"
